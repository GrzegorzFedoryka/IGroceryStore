{
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=app.db;Cache=Shared"
  },
  "Users": {
    "JwtSettings": {
      "Key": "my-32-character-ultra-secure-and-ultra-long-secret",
      "ExpireSeconds": 300,
      "Issuer": "https://localhost:5000/",
      "ClockSkew": 30
    }
  },  
  "Logging": {
      "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
      }
    },
  "IdentityServer": {
    "Clients": {
      "Proxy": {
        "Profile": "IdentityServerSPA"
      }
    }
  },
  "Postgres": {
    "ConnectionString": "User ID = postgres; Password = admin ; Server = localhost; Port = 5432; Database = IGroceryShopDb; Integrated Security = true; Pooling = true;"
  },
  "AllowedHosts": "*",
  "EnableSensitiveData": false
}
